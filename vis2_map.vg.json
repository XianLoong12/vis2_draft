{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Number of Births by State in Malaysia",
    "projection": {"type": "equalEarth"},
    "data": {
        "url": "https://raw.githubusercontent.com/XianLoong12/week10hw/main/gadm41_MYS_1.json",
        "format": {"type": "topojson", "feature": "gadm41_MYS_1"}
    },
    "transform": [
        {
            "lookup": "properties.NAME_1",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/XianLoong12/vis2_draft/main/Wide_Format_Birth_Data.csv",
                    "format": {"type": "csv"}
                },
                "key": "state",
                "fields": ["2000", "2001", "2002", "2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021", "2022"]
            }
        },
        {
            "calculate": "datum[Year_Selection]",
            "as": "Number of Births"
        },
        {
            "calculate": "Year_Selection",
            "as": "Selected Year"
        }
    ],
    "params": [
        {
            "name": "Year_Selection",
            "value": 2022,
            "bind": {
                "input": "range",
                "min": 2000,
                "max": 2022,
                "step": 1,
                "name": "Select Year: "
            }
        }
    ],
    "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
    "encoding": {
        "color": {
            "field": "Number of Births",
            "type": "quantitative",
            "scale": {
                "type": "threshold",
                "domain": [0, 20000, 40000, 60000, 80000, 100000, 120000],
                "range": ["#eff3ff", "#c6dbef", "#9ecae1", "#6baed6", "#4292c6", "#2171b5", "#08519c", "#08306b"]
            },
            "legend": {
                "title": "Number of Births",
                "orient": "bottom-right"
            }
        },
        "tooltip": [
            {"field": "properties.NAME_1", "type": "nominal", "title": "State"},
            {"field": "Number of Births", "type": "quantitative", "title": "Number of Births"},
            {"field": "Selected Year", "type": "ordinal", "title": "Year"}
        ]
    }
}
