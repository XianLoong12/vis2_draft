{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Number of Births by State in Malaysia",
    "projection": {"type": "equalEarth"},
    "params": [
        {
            "name": "Year_Selection",
            "value": 2022,
            "bind": {
                "input": "range",
                "min": 2000,
                "max": 2022,
                "step": 1,
                "name": "Select Year: "
            }
        }
    ],
    "data": {
        "url": "https://raw.githubusercontent.com/XianLoong12/vis2_draft/main/Wide_Format_Birth_Data.csv",
        "format": {"type": "csv"}
    },
    "transform": [
        {
            "calculate": "datum[Year_Selection]",
            "as": "selected_year_value"
        }
    ],
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/XianLoong12/week10hw/main/gadm41_MYS_1.json",
                "format": {"type": "topojson", "feature": "gadm41_MYS_1"}
            },
            "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
            "transform": [
                {
                    "lookup": "properties.NAME_1",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/XianLoong12/vis2_draft/main/Wide_Format_Birth_Data.csv",
                            "format": {"type": "csv"}
                        },
                        "key": "state",
                        "fields": ["selected_year_value"]
                    }
                }
            ],
            "encoding": {
                "color": {
                    "field": "selected_year_value",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [0, 10000, 20000, 30000, 40000, 50000, 60000, 70000],
                        "range": ["#eff3ff", "#c6dbef", "#9ecae1", "#6baed6", "#4292c6", "#2171b5", "#08519c", "#08306b"]
                    },
                    "legend": {
                        "title": "Number of Births",
                        "orient": "bottom-right"
                    }
                },
                "tooltip": [
                    {"field": "properties.NAME_1", "type": "nominal", "title": "State"},
                    {"field": "selected_year_value", "type": "quantitative", "title": "Number of Births"},
                    {"field": "Year_Selection", "type": "ordinal", "title": "Year"}
                ]
            }
        }
    ]
}
