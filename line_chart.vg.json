{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Number of Births by State in Malaysia Over Time",
    "data": {
        "url": "https://raw.githubusercontent.com/XianLoong12/week10hw/main/Cleaned_Birth_Data_fm.csv",
        "format": {"type": "csv"}
    },
    "mark": {
        "type": "line",
        "point": true
    },
    "params": [
        {
            "name": "selectedState",
            "select": {"type": "point", "fields": ["state"]},
            "bind": "legend"
        }
    ],
    "encoding": {
        "x": {
            "field": "date",
            "type": "temporal",
            "title": "Year"
        },
        "y": {
            "field": "abs",
            "type": "quantitative",
            "title": "Number of Births"
        },
        "color": {
            "field": "state",
            "type": "nominal",
            "scale": {"scheme": "Set2"},
            "legend": {"title": "State"}
        },
        "opacity": {
            "condition": {"param": "selectedState", "value": 1},
            "value": 0.1
        },
        "tooltip": [
            {"field": "state", "type": "nominal", "title": "State"},
            {"field": "abs", "type": "quantitative", "title": "Number of Births"},
            {"field": "date", "type": "temporal", "title": "Year"}
        ]
    }
}
