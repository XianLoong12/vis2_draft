{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": {
        "text": "Number of Births by State in Malaysia (Stacked by State)",
        "fontSize": 24  
      }, 
    "data": {
        "url": "https://raw.githubusercontent.com/XianLoong12/week10hw/main/Cleaned_Birth_Data_fm.csv",
        "format": {"type": "csv"}
    },
    "mark": "bar",
    "params": [
        {
            "name": "selectedState",
            "select": {"type": "point", "fields": ["state"]},
            "bind": "legend"
        }
    ],
    "encoding": {
        "x": {
            "field": "date",
            "type": "ordinal",
            "title": "Year",
            "axis": {
                "labelFontSize": 14, 
                "titleFontSize": 16  
              }
        },
        "y": {
            "field": "abs",
            "type": "quantitative",
            "title": "Number of Births",
            "axis": {
                "labelFontSize": 14, 
                "titleFontSize": 16  
              }
        },
        "color": {
            "field": "state",
            "type": "nominal",
            "scale": {
                "range": [
                    "#88CCEE", "#CC6677", "#DDCC77", "#117733",
                    "#332288", "#AA4499", "#44AA99", "#999933",
                    "#882255", "#661100", "#6699CC", "#888888",
                    "#E69F00", "#56B4E9", "#009E73", "#F0E442"
                ]
            },
            "legend": {"title": "State"}
        },
        "opacity": {
            "condition": {"param": "selectedState", "value": 1},
            "value": 0.2
        },
        "tooltip": [
            {"field": "state", "type": "nominal", "title": "State"},
            {"field": "abs", "type": "quantitative", "title": "Number of Births"},
            {"field": "date", "type": "ordinal", "title": "Year"}
        ]
    },
    "transform": [
        {
            "filter": "datum.date >= 2000 && datum.date <= 2022"
        }
    ]
}
